<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NeMonopolia3.Registration">
   <StackLayout>
        <Label  Text="Регистрация"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               FontSize="Large"
               FontAttributes="Bold"
               FontFamily="HeliosCond"
                Margin="10"
                TextColor="Black"
               />
    <Frame HeightRequest="210" WidthRequest="315" >
        <Image Margin="25" VerticalOptions="Center"  x:Name="Iconimage" />
    </Frame>

       <Frame BorderColor="Gray" Margin="5" CornerRadius="15" WidthRequest="20" HeightRequest="10">
           <Entry Placeholder="Имя" x:Name="name" Margin="5" WidthRequest="20" HeightRequest="10"/>
       </Frame>

       <Frame BorderColor="Gray" Margin="5" CornerRadius="15" HeightRequest="20">
           <Entry Placeholder="Логин" x:Name="login" Margin="5"  HeightRequest="20"/>
       </Frame>

       <Frame BorderColor="Gray" Margin="5" CornerRadius="15" WidthRequest="20" HeightRequest="10">
           <Entry Placeholder="Пароль" x:Name="password" Margin="5" />
       </Frame>

       <CheckBox Color="Blue"/>
       <Label Text="Я принимаю условия политики конфилициальности" />
   
   </StackLayout>
       
        
  
  
   
</ContentPage>

